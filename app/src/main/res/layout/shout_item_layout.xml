<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_round_more_vert"
            android:id="@+id/imageView5"
            android:elevation="3dp" app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView4" android:alpha="0.6"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageView4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:elevation="5dp" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" android:elevation="10dp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="Jon Doe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
    <TextView
            android:text="Some content"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:elevation="2dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginEnd="8dp"
            android:elevation="3dp" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_round_thumb_up"
            android:id="@+id/imageView7" android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" android:alpha="0.6"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_round_comment"
            android:id="@+id/imageView8" android:elevation="2dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/divider2"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/imageView4"
            android:alpha="0.6"/>
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:layout_constraintStart_toEndOf="@+id/imageView8" android:layout_marginStart="8dp"
            android:elevation="2dp" android:paddingBottom="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="2dp"/>
    <TextView
            android:text="13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/imageView7"
            android:layout_marginEnd="8dp" android:elevation="2dp"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"/>
    <TextView
            android:text="73m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:elevation="2dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="@+id/imageView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>